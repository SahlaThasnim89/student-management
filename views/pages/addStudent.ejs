                            <div class="col-12 mb-30"><textarea class="form-control" placeholder="Address*" name="Address" required></textarea></div>
                            <div class="col-lg-6 col-12 mb-30">
                                <select class="form-control select2" name="gender">
                                    <option value="Gender">Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Prefer not to say">Prefer not to say</option>
                                </select>
                            </div>
                            <div class="col-lg-6 col-12 mb-30"><input class="form-control" type="number" placeholder="Phone" name="Phone" required></div>
                            <div class="col-lg-6 col-12 mb-30"><input class="form-control" type="number" min="1" max="12" placeholder="Grade" name="Grade" required></div>
                            <div class="col-lg-6 col-12 mb-30"><input class="form-control" type="text" placeholder="Blood Group" name="Blood" required></div>
                        </div>

