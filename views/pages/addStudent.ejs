                    <form action="/addingStudent" method="post">

                        <h4 class="title">About Student</h4>

                        <div class="row">
                            <div class="col-lg-6 col-12 mb-30"><input class="form-control" type="text" placeholder="First Name*" name="FirstName" required></div>
                            <div class="col-lg-6 col-12 mb-30"><input class="form-control" type="text" placeholder="Last Name" name="LastName" required></div>
